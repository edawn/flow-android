<de.bitmacht.workingtitle36.view.TransactionView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    style="@style/Transaction">

    <de.bitmacht.workingtitle36.view.TimeView
        android:id="@+id/time"
        style="@style/TransactionItemTime"
        custom:timeFormat="timeDateShortFixed"
        />

    <de.bitmacht.workingtitle36.view.ValueTextView
        android:id="@+id/value"
        android:layout_toEndOf="@id/time"
        android:layout_toRightOf="@id/time"
        style="@style/TransactionItemValue" />

    <de.bitmacht.workingtitle36.view.DescriptionView
        android:id="@+id/description"
        android:layout_toEndOf="@id/value"
        android:layout_toRightOf="@id/value"
        style="@style/TransactionItemDescription"
        custom:isConcise="true" />

</de.bitmacht.workingtitle36.view.TransactionView>