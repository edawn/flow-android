<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TransactionEditorItem" parent="Wrap">
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:paddingBottom">18dp</item>
    </style>

    <style name="TransactionEditorItemIcon" parent="TransactionEditorItem">
        <item name="android:id">@id/icon</item>
        <item name="android:layout_alignParentLeft">true</item>
        <!-- should be more like ?android:attr/textColorSecondary with tintMode src_in ... -->
        <item name="android:tint">@color/itemIcon</item>
    </style>

    <style name="TransactionEditorItemLabel" parent="TransactionEditorItem">
        <item name="android:layout_toRightOf">@id/icon</item>
    </style>

    <style name="TransactionEditorItemAction" parent="TransactionEditorItem">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="TransactionEditorItemActionValueContainer" parent="TransactionEditorItemAction">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="TransactionEditorItemActionValue" parent="Wrap">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="TransactionEditorItemActionTime" parent="TransactionEditorItemAction">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:gravity">center_vertical|right|end</item>
    </style>

    <style name="TransactionEditorItemActionDateTime" parent="TransactionEditorItemActionTime">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TransactionEditorItemActionTextContainer" parent="TransactionEditorItemAction">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="TimeView_Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="Transaction">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="TransactionElement" parent="Wrap">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TransactionItemTime" parent="TransactionElement">
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="TransactionItemValue" parent="TransactionElement">
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">end</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="TransactionItemPeriod" parent="TransactionElement">
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="TransactionItemDescription" parent="TransactionElement">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
